<%- model_class = Item -%>
<div class="page-header">
    <h1>入力項目</h1>
</div>
<%= link_to 'to 入力画面', {controller: :submits}, :class => 'btn btn-primary', style: "color: #fff;" %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:typ) %></th>
      <th><%= model_class.human_attribute_name(:presence) %></th>
      <th><%= model_class.human_attribute_name(:only_integer) %></th>
      <th><%= model_class.human_attribute_name(:format_with) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id, item_path(item) %></td>
        <td><%= item.name %></td>
        <td><%= item.typ %></td>
        <td><%= item.presence %></td>
        <td><%= item.only_integer %></td>
        <td><%= item.format_with %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_path(item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_path(item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_path, :class => 'btn btn-primary' , style: 'color: #fff;' %>
